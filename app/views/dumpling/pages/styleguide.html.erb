<% title 'Styleguide' %>

<%= component 'band', background_color: 'violet', class: 'shadow-medium', size: 'lg' do %>
  <h1>Dumpling Styleguide</h1>
<% end %>

<div class="column container">
  <div class="column column-pad-y">
    <h2>Row</h2>

    <h3>Standard</h3>

    <div class="row">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>No Gap</h3>

    <div class="row row-no-gap">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Padded</h3>

    <div class="row row-padded">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Pad X</h3>

    <div class="row row-pad-x">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Pad Y</h3>

    <div class="row row-pad-y">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>
  </div>

  <div class="column column-pad-y">
    <h2>Column</h2>

    <h3>Standard</h3>

    <div class="column">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>No Gap</h3>

    <div class="column column-no-gap">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Padded</h3>

    <div class="column column-padded">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Pad X</h3>

    <div class="column column-pad-x">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>

    <h3>Pad Y</h3>

    <div class="column column-pad-y">
      <span>Item 1</span>
      <span>Item 2</span>
    </div>
  </div>
</div>
