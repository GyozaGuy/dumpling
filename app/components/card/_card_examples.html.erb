<div class="column column-gap-md">
  <h3>Basic</h3>

  <%= component 'card' do %>
    Card content
  <% end %>
</div>

<div class="column column-gap-md">
  <h3>Header</h3>

  <%= component 'card' do |card| %>
    <% card.with_header do %>
      Card Title
    <% end %>

    Card content
  <% end %>
</div>

<div class="column column-gap-md">
  <h3>Footer</h3>

  <%= component 'card' do |card| %>
    Card content

    <% card.with_footer do %>
      <button type="button">Do Something</button>
    <% end %>
  <% end %>
</div>

<div class="column column-gap-md">
  <h3>Header and Footer</h3>

  <%= component 'card' do |card| %>
    <% card.with_header do %>
      Card Title
    <% end %>

    Card content

    <% card.with_footer do %>
      <button type="button">Do Something</button>
    <% end %>
  <% end %>
</div>

<div class="column column-gap-md">
  <h3>Custom Background</h3>

  <%= component 'card', background: 'linear-gradient(to top right, lime, skyblue)' do %>
    Card content
  <% end %>
</div>

<div class="column column-gap-md">
  <h3>Clickable</h3>

  <%= component 'card', href: '' do %>
    Card content
  <% end %>
</div>
