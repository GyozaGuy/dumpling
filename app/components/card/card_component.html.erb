<% if href %>
  <a <%= class_string %> href="<%= href %>">
  <% end %>

  <div <%= class_string unless href %> data-component="card" <%= style_string %>>
    <% if header? %>
      <div class="card_header">
        <%= header %>
      </div>
    <% end %>

    <div class="card_content">
      <%= content %>
    </div>

    <% if footer? %>
      <div class="card_footer">
        <%= footer %>
      </div>
    <% end %>
  </div>

  <% if href %>
  </a>
<% end %>
