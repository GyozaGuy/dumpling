<% if href %>
  <a class="card_link" href="<%= href %>">
  <% end %>

  <%= component_tag do %>
    <% if header? %>
      <div class="card_header">
        <%= header %>
      </div>
    <% end %>

    <div class="card_content">
      <%= content %>
    </div>

    <% if footer? %>
      <div class="card_footer">
        <%= footer %>
      </div>
    <% end %>
  <% end %>

  <% if href %>
  </a>
<% end %>
