<% content_for tabs_id.to_sym do %>
  <button
    class="button-hidden tab <%= selected? ? 'tab-selected' : '' %>"
    data-action="tabs-component#select"
    data-index="<%= index %>"
    data-tabs-component-target="tab"
    type="button"
  >
    <%= label %>
    <div class="tab_bottom"></div>
  </button>
<% end %>

<div
  data-component="tab"
  data-index="<%= index %>"
  data-tabs-component-target="tabContent"
  <%= 'hidden' unless selected? %>
>
  <%= content %>
</div>
